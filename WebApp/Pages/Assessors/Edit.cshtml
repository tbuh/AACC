@page
@model WebApp.Pages.Assessors.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/_Layout.cshtml";
}


<h4>Assessor Edit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Assessor.AssessorId" />
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Assessor.IsAdmin" /> @Html.DisplayName("Is admin")
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">
                    @Html.DisplayName("Team")
                </label>
                <select asp-for="Assessor.TeamId" class="form-control" asp-items="@Model.TeamIds"></select>
                <span asp-validation-for="Assessor.TeamId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assessor.Name" class="control-label"></label>
                <input asp-for="Assessor.Name" class="form-control" />
                <span asp-validation-for="Assessor.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assessor.Login" class="control-label"></label>
                <input asp-for="Assessor.Login" class="form-control" />
                <span asp-validation-for="Assessor.Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assessor.Password" class="control-label"></label>
                <input asp-for="Assessor.Password" class="form-control" />
                <span asp-validation-for="Assessor.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assessor.Company" class="control-label"></label>
                <input asp-for="Assessor.Company" class="form-control" />
                <span asp-validation-for="Assessor.Company" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assessor.Position" class="control-label"></label>
                <input asp-for="Assessor.Position" class="form-control" />
                <span asp-validation-for="Assessor.Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
