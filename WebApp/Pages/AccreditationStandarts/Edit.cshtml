@page
@model WebApp.Pages.AccreditationStandarts.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/_Layout.cshtml";
}

<h4>Edit Standart Type @Model.AccreditationStandart.StandartType</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AccreditationStandart.AccreditationStandartId" />
            <div class="form-group" contenteditable="true">
                <label asp-for="AccreditationStandart.Title" class="control-label"></label>
                <input asp-for="AccreditationStandart.Title" class="form-control" />
                <span asp-validation-for="AccreditationStandart.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccreditationStandart.Description" class="control-label"></label>
                <textarea asp-for="AccreditationStandart.Description" class="form-control" style="resize:vertical;min-height:150px;max-height:250px;"></textarea>
                <span asp-validation-for="AccreditationStandart.Description" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="AccreditationStandart.StandartType" class="control-label"></label>
                <input asp-for="AccreditationStandart.StandartType" class="form-control" style="max-width:150px;" hidden/>
                <span asp-validation-for="AccreditationStandart.StandartType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
