@page
@model WebApp.Pages.AccreditationStandarts.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/_Layout.cshtml";
}
<p>
    <div style="margin-top:10px;margin-bottom:10px;">

        <a class="btn btn-success" asp-page="./Create">Create new Accreditation Standart</a>

    </div>
</p>
<table class="table">

    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.AccreditationStandart[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccreditationStandart[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AccreditationStandart[0].StandartType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AccreditationStandart)
        {
            <tr>
                <td width="33%">
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td width="40%;">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td width="5%">
                    @Html.DisplayFor(modelItem => item.StandartType)
                </td>
                <td>
                    <a class="btn btn-success btn-xs" asp-page="./Edit" asp-route-id="@item.AccreditationStandartId">Edit</a> 
                    <a class="btn btn-info btn-xs" asp-page="./Delete" asp-route-id="@item.AccreditationStandartId">Delete</a>
                    <a class="btn btn-danger btn-xs" asp-page="/Questions/Details" asp-route-id="@item.AccreditationStandartId">Questions List</a>
                </td>
            </tr>
        }
    </tbody>
</table>
